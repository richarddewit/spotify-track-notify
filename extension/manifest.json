{
   "manifest_version": 2,
   "name": "Spotify Track Notify",
   "description": "Sends a notification with the track info when playing a different track",
   "developer": {
      "name" :"Richard de Wit"
   },
   "content_scripts": [ {
      "js": [ "script.js" ],
      "matches": [ "https://open.spotify.com/*" ],
      "run_at": "document_end"
   } ],
   "icons": {
      "128": "icons/icon-128.png",
      "48": "icons/icon-48.png",
      "16": "icons/icon-16.png"
   },
   "offline_enabled": true,
   "permissions": [
      "notifications",
      "tabs",
      "https://open.spotify.com/*"
   ],
   "version": "2017.09",
   "minimum_chrome_version" : "37"
}
